<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".Cadastros.CadastrarPet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center|center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="150dp"
                        android:layout_height="106dp"
                        app:srcCompat="@drawable/gato_feliz" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="168dp"
                        android:layout_height="55dp"
                        android:fontFamily="@font/lilita_one"
                        android:gravity="right"
                        android:text="Miaw! Mais um aumiguinho"
                        android:textColor="@color/water_blue"
                        android:textSize="24sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/varela_round"
                    android:text="Nome/Apelido"
                    android:textColor="@color/water_blue" />

                <EditText
                    android:id="@+id/nomeCompleto"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:hint="Nome/Apelido"
                    android:inputType="text"
                    android:paddingHorizontal="10dp"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/varela_round"
                    android:text="Idade"
                    android:textColor="@color/water_blue" />

                <EditText
                    android:id="@+id/idade"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:ems="10"
                    android:hint="Idade"
                    android:inputType="number"
                    android:paddingHorizontal="10dp"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/varela_round"
                    android:text="Espécie"
                    android:textColor="@color/water_blue" />

                <Spinner
                    android:id="@+id/especie"

                    android:layout_width="match_parent"

                    android:layout_height="48dp"

                    android:layout_marginBottom="20dp"

                    android:background="@drawable/rounded_edit_text"
                    android:popupBackground="@color/white" />

                <TextView

                    android:id="@+id/especiebrigatorio"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:paddingHorizontal="10dp"

                    android:fontFamily="@font/varela_round"

                    android:text="Gênero obrigatório"

                    android:textColor="@color/red_or_orange"
                    android:textSize="12sp" />



                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/varela_round"
                    android:text="Gênero"
                    android:textColor="@color/water_blue" />

                <Spinner
                    android:id="@+id/genero"

                    android:layout_width="match_parent"

                    android:layout_height="48dp"

                    android:layout_marginBottom="10dp"

                    android:background="@drawable/rounded_edit_text"
                    android:popupBackground="@color/white" />

                <TextView

                    android:id="@+id/generoobrigatorio"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_marginLeft="10dp"

                    android:layout_marginBottom="10dp"

                    android:fontFamily="@font/varela_round"

                    android:text="Gênero obrigatório"

                    android:textColor="@color/red_or_orange"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/varela_round"
                    android:text="Raça"
                    android:textColor="@color/water_blue" />

                <AutoCompleteTextView

                    android:id="@+id/raca"

                    android:layout_width="match_parent"

                    android:layout_height="48dp"

                    android:layout_marginBottom="10dp"

                    android:background="@drawable/rounded_edit_text"

                    android:ems="10"

                    android:hint="Selecione a raça"

                    android:inputType="text"

                    android:paddingHorizontal="10dp"

                    android:textSize="14sp"

                    />


                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/varela_round"
                    android:text="Cor"
                    android:textColor="@color/water_blue" />

                <AutoCompleteTextView

                    android:id="@+id/cor"

                    android:layout_width="match_parent"

                    android:layout_height="48dp"

                    android:layout_marginBottom="10dp"

                    android:background="@drawable/rounded_edit_text"

                    android:ems="10"

                    android:hint="Selecione a cor"

                    android:inputType="text"

                    android:paddingHorizontal="10dp"

                    android:textSize="14sp"

                    />


                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/varela_round"
                    android:text="Porte"
                    android:textColor="@color/water_blue" />

                <Spinner
                    android:id="@+id/porte"

                    android:layout_width="match_parent"

                    android:layout_height="48dp"

                    android:layout_marginBottom="20dp"

                    android:background="@drawable/rounded_edit_text"
                    android:popupBackground="@color/white" />

                <TextView

                    android:id="@+id/porteobrigatorio"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:paddingHorizontal="10dp"

                    android:fontFamily="@font/varela_round"

                    android:text="Gênero obrigatório"

                    android:textColor="@color/red_or_orange"
                    android:textSize="12sp" />



                <Button
                    android:id="@+id/btnCadastrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/principal_button"
                    android:fontFamily="@font/lilita_one"
                    android:onClick="CadastraPet"
                    android:text="Cadastrar"
                    android:textSize="26dp" />

                <Button
                    android:id="@+id/btnSair"
                    android:layout_width="154dp"
                    android:layout_height="48dp"
                    android:backgroundTint="#2C4D4B"
                    android:fontFamily="@font/lilita_one"
                    android:text="Sair"
                    android:textSize="22dp" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:indeterminateTint="@color/water_blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>