<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perdidos.PrimeirosCuidados"
    android:background="@color/beige">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="Logo"
                    app:tint="@color/red_or_orange"
                    tools:src="@drawable/ic_logo" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="Button config"
                    android:paddingLeft="100dp"
                    android:src="@drawable/ic_config"
                    app:tint="@color/red_or_orange" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lilita_one"
                android:paddingHorizontal="30dp"
                android:text="Primeiros cuidados ao achar um Pet perdido"
                android:textColor="@color/red_or_orange"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="30dp"
                android:paddingTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="10dp"
                    android:layout_height="132dp"
                    android:backgroundTint="@color/red_or_orange"
                    app:cardCornerRadius="12dp">

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">


                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lilita_one"
                        android:text="1. Avalie a Situação"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round"
                        android:text="   Segurança Primeiro: Antes de se aproximar do animal, certifique-se de que o local é seguro tanto para você quanto para o animal. Evite áreas com muito tráfego ou perigos potenciais."
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round"
                        android:text="   Calma e Paciência: Aproximar-se lentamente e com calma. Evite movimentos bruscos e barulhos altos que possam assustar o animal."
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="30dp"
                android:paddingTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="10dp"
                    android:layout_height="132dp"
                    android:backgroundTint="@color/red_or_orange"
                    app:cardCornerRadius="12dp">

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">


                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lilita_one"
                        android:text="2. Aproximar-se do Animal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round"
                        android:text="   Postura Abaixada: Ajoelhe-se ou abaixe-se para parecer menos ameaçador."
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round"
                        android:text="   Voz Suave: Fale suavemente para tranquilizar o animal."
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView39"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round"
                        android:text="   Mão Estendida: Estenda sua mão para o animal cheirar. Isso permite que ele se acostume com seu cheiro."
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="30dp"
                android:paddingTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="10dp"
                    android:layout_height="132dp"
                    android:backgroundTint="@color/red_or_orange"
                    app:cardCornerRadius="12dp">

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">


                    <TextView
                        android:id="@+id/textView40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lilita_one"
                        android:text="3. Verifique por Identificação"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round"
                        android:text="   Coleira e Placas: Veja se o animal está usando uma coleira com identificação. Placas podem ter o nome do animal, número de telefone ou endereço do dono."
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round"
                        android:text="   Microchip: Se não houver identificação visível, leve o animal a um veterinário ou abrigo de animais para verificar se ele tem um microchip.."
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="30dp"
                android:paddingTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="10dp"
                    android:layout_height="110dp"
                    android:backgroundTint="@color/red_or_orange"
                    app:cardCornerRadius="12dp">

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">


                    <TextView
                        android:id="@+id/textView43"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lilita_one"
                        android:text="4. Confinar o Animal com Segurança"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round"
                        android:text="   Espaço Seguro: Se possível, leve o animal para um lugar seguro e confinado, como seu quintal ou uma área segura dentro de sua casa."
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView45"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round"
                        android:text="   Água e Comida: Ofereça água fresca e, se possível, um pouco de comida."
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="30dp"
                android:paddingTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="10dp"
                    android:layout_height="170dp"
                    android:backgroundTint="@color/red_or_orange"
                    app:cardCornerRadius="12dp">

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">


                    <TextView
                        android:id="@+id/textView46"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lilita_one"
                        android:text="5. Leve a um lugar seguro"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView47"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round"
                        android:text="   Acomodações Seguras: Se você decidir cuidar do animal temporariamente, certifique-se de que ele tenha um lugar seguro e confortável para ficar."
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView48"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round"
                        android:text="   Cuidados Básicos: Garanta que ele tenha água, comida, e um lugar para dormir."
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView49"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round"
                        android:text="   Ou leve a uma ong próxima de você:"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/button12"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Ongs" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="30dp"
                android:paddingTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="10dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/red_or_orange"
                    app:cardCornerRadius="12dp">

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">


                    <TextView
                        android:id="@+id/textView50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lilita_one"
                        android:text="6. Verifique se alguém da sua região é dono desse pet"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/button13"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/red_or_orange"
                        android:text="Pets Perdidos" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>